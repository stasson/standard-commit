{
  "name": "standard-commit",
  "version": "0.1.0",
  "description": "conventional commit helper",
  "author": "Sebastien Tasson <sebastien.tasson@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stasson/standard-commit.git"
  },
  "bugs": {
    "url": "https://github.com/stasson/standard-commit/issues"
  },
  "main": "index.js",
  "bin": {
    "standard-commit": "cli.js"
  },
  "scripts": {
    "start": "ts-node src/cli.ts",
    "build": "run-s build:*",
    "build:clean": "rimraf dist",
    "build:lib": "tsc -p tsconfig.json",
    "test": "jest --runInBand",
    "tdd": "jest --runInBand --watch",
    "prettier": "prettier --write src/**/*",
    "lint": "cross-env NODE_ENV=production tslint src/**/*.ts -t verbose",
    "commit-lint": "commitlint",
    "release": "standard-version"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "gitHooks": {
    "commit-msg": "commitlint -E GIT_PARAMS"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.2",
    "jest": "^23.5.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.1.4",
    "ts-node-dev": "^1.0.0-pre.26",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.1",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@types/inquirer": "0.0.43",
    "inquirer": "^6.2.0",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "fuzzy": "^0.1.3",
    "linewrap": "^0.2.1"
  }
}

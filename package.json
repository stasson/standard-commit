{
  "name": "standard-commit",
  "version": "0.7.1",
  "description": "conventional commit",
  "author": "Sebastien Tasson <sebastien.tasson@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stasson/standard-commit.git"
  },
  "bugs": {
    "url": "https://github.com/stasson/standard-commit/issues"
  },
  "keywords": [
    "commit",
    "conventional",
    "conventional-changelog",
    "standard-version",
    "commitizen"
  ],
  "main": "index.js",
  "files": [
    "commit.js",
    "dist"
  ],
  "bin": {
    "standard-commit": "commit.js",
    "git-cc": "commit.js"
  },
  "scripts": {
    "start": "ts-node src/cli/commit.ts",
    "tdd": "jest --runInBand --watch",
    "format": "prettier --write src/**/*",
    "test": "run-s test:*",
    "test:unit": "jest --runInBand",
    "test:lint": "cross-env NODE_ENV=production tslint src/**/*.ts -t verbose",
    "build": "run-s build:*",
    "build:clean": "rimraf dist",
    "build:lib": "tsc -p tsconfig.dist.json",
    "prepublish": "run-s build:*",
    "release": "standard-version"
  },
  "standard-commit": {
    "scopes": "none"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "gitHooks": {
    "commit-msg": "commitlint -E GIT_PARAMS"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/execa": "^0.9.0",
    "@types/jest": "^23.3.1",
    "@types/listr": "^0.13.0",
    "@types/node": "^10.8.0",
    "bdd-stdin": "^0.2.0",
    "cross-env": "^5.2.0",
    "jest": "^23.5.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.1.4",
    "ts-node-dev": "^1.0.0-pre.26",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.1",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@types/inquirer": "0.0.43",
    "@types/meow": "^4.0.1",
    "cosmiconfig": "^5.0.6",
    "execa": "^1.0.0",
    "fuzzy": "^0.1.3",
    "inquirer": "^6.2.0",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "linewrap": "^0.2.1",
    "meow": "^5.0.0",
    "minimist": "^1.2.0"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}

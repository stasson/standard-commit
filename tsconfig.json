{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true
  },
  "include": [ 
    "src/**/*",
    "test/**/*", "bin/commitlint.js", "bin/commithook.js", "bin/msg-commit-hook.js", "bin/msg-commit-hook.ts", "bin/commit.js"
  ]
}
